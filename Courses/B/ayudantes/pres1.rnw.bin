\section{F\'ormulas}
\subsection{Teorema de Bayes}
\begin{frame}
	\frametitle{Teorema de Bayes}
	\begin{equation} \label{eq:1.1}
		P(A_{i}|B) = 
			\frac{P(B|A_{i})P(A_{i})}{P(B)} = 
			\frac{P(B|A_{i})P(A_{i})}{\displaystyle\sum_{j=1}^n P(B|A_{j})P(A_{j})}
	\end{equation}
\end{frame}

\subsection{Cambio por selecci\'on}
\begin{frame}
	\frametitle{Cambio de frecuencia al\'elica por selecci\'on}
	\begin{equation} \label{eq:1.2}
		\Delta_{s}p = \frac{pqs[ph-q(1-h)]}{1-2pqsh-q^{2}s}
	\end{equation}	
	Donde, \\
	$p =$ Frecuencia de $A_{1}$ \\
	$q =$ Frecuencia de $A_{2} = 1 - p$ \\
	$s =$ Coeficiente de selecci\'on \\
	$h =$ Efecto del heterocigoto \\
\end{frame}

\subsection{Informaci\'on mutua}
\begin{frame}
	\frametitle{Informaci\'on mutua}
	\begin{equation} \label{eq:3}
		MI = \displaystyle\sum_{i=1}^N\sum_{j=1}^M P(a_{i},b_{j})log\left(\frac{P(a_{i},b_{j})}{P(a_{i})P(b_{j})}\right)
	\end{equation}
	Donde, \\
	$N = $ el n\'umero de estados posibles en el vector $A$ \\
	$M = $ el n\'umero de estados posibles en el vector $B$
\end{frame}

